<div class="card mb-3" style="max-width: 270px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{post.author.get_icon_url()}}" class="img-fluid rounded-start" alt="avatar">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{pokemon.name}}: </h5>
                    
                    {# {% if view_all %} #}
                    <p class="card-text">{{post.body}}</p>
                    <small><a href="{{url_for('main.get_a_pokemon', id=pokemon.id)}}">View Pokemon</a></small>
                    {# {% endif %} #}
                    <small><a href="{{ url_for('main.delete_pokemon', id=pokemon.id)}}">Remove Pokemon</a></small>
                    <p class="card-text">
                        <small class="text-muted">
                            {{moment(post.created_on).fromNow()}}
                            <span class="float-end" style="color: #3B4CCA">
                                {{'edited ' + moment(post.date_modified).fromNow()|string if post.date_modified else ''}}
                            </span>
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>